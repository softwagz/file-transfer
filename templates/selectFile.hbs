<div class="row">
    <hr>
    <h3 class="mx-auto">MP4</h3>
    <hr>
</div>
<div class="row">
    {{#if mp4.length}}
    {{#each mp4}}
    <div class="col-md-4">
        <div class="card m-4">
            <form method="POST" action="./file">
                <input type="hidden" name="file" id="file" value="{{name}}">
                <div class="card-header">
                    <h4 style="font-size: 100%;overflow: hidden; white-space: nowrap;text-overflow: ellipsis;">{{name}}
                    </h4>
                </div>
                <div class="card-body">
                    <video width="100%" height="250px" controls>
                        <source src="/files/{{name}}" type="video/mp4">
                        Your browser does not support HTML5 video.
                    </video>
                    <p>Size: {{size}} kbytes</p>
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary"> Descargar </button>
                </div>
            </form>
        </div>
    </div>
    {{/each}}

    {{else}}
    <div class="mx-auto">
        <p>No hay nada para mostrar</p>
    </div>
    {{/if}}


</div>
